<h1><%= @character.name %></h1>

<form action="/characters/<%= @character.id %>/edit" method="get">
  <button type="submit">Edit Character</button>
</form>

<p>
  <ul>Class: <%= @character.char_class %></ul>
  <ul>Level: <%= @character.level %></ul>
  <ul>Race: <%= @character.race %></ul>
  <ul>Background: <%= @character.background %></ul>
  <ul>Alignment: <%= @character.alignment %></ul>
  <ul>XP: <%= @character.xp_points %></ul>
</p>

<p>
