<div class="container">

  <div>
    <h1 style="padding-bottom: 0.2em; text-align: center;">Character List</h1>
  </div>

  <form action="/characters/new" method="get" style="text-align: center; padding: 0.5em; margin-bottom: 1em">
    <button type="submit" class="btn btn-default btn-lg">
      Create New Character
    </button>
  </form>

  <div class="large-flex">
    <% for character in @characters %>
      <div class="flex-item">
        <h4>Name: <i><%= character.name %></i></h4>
        <hr style="margin: 0.3em;">
        <b>Race:</b> <i><%= character.race %></i>
        <hr style="margin: 0.3em;">
        <b>Class:</b> <i><%= character.char_class %></i>
        <hr style="margin: 0.3em;">
        <b>Level:</b> <i><%= character.level %></i>
        <hr style="margin: 0.3em;">
        <form action="/characters/<%= character.id %>" method="get">
          <button class="btn btn-default btn-sm" type="submit">View Character</button>
        </form>
        <form action="/characters/<%= character.id %>/delete" method="post">
          <button class="btn btn-default btn-sm" type="submit">Delete Character</button>
        </form>
      </div>
    <% end %>
  </div>

</div>